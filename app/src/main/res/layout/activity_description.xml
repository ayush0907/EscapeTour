<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DescriptionActivity">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/normal_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/toolbar_colour_blue"
        android:theme="@style/ToolbarTheme"
        app:contentInsetEnd="0dp"
        app:contentInsetStart="0dp"
        app:layout_scrollFlags="scroll|enterAlways"
        app:menu="@menu/normal_menu"
        app:titleTextColor="@color/white">

    </com.google.android.material.appbar.MaterialToolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:context=".DescriptionActivity"
                tools:ignore="HardcodedText">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">


                    <com.smarteist.autoimageslider.SliderView
                        android:id="@+id/slider_description"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_170sdp"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:background="@color/white"
                        app:sliderAnimationDuration="600"
                        app:sliderAutoCycleDirection="back_and_forth"
                        app:sliderIndicatorAnimationDuration="600"
                        app:sliderIndicatorEnabled="true"
                        app:sliderIndicatorGravity="center_horizontal|bottom"
                        app:sliderIndicatorMargin="@dimen/_10sdp"
                        app:sliderIndicatorOrientation="horizontal"
                        app:sliderIndicatorPadding="@dimen/_3sdp"
                        app:sliderIndicatorRadius="@dimen/_1sdp"
                        app:sliderIndicatorSelectedColor="@color/white"
                        app:sliderIndicatorUnselectedColor="@color/gray"
                        app:sliderScrollTimeInSec="@integer/material_motion_duration_short_2"
                        tools:ignore="NotSibling">


                    </com.smarteist.autoimageslider.SliderView>


                    <TextView
                        android:id="@+id/holder6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingTop="@dimen/_4sdp"
                        android:paddingBottom="@dimen/_4sdp"
                        android:text="Place name"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_16ssp"
                        android:textStyle="bold"
                        tools:ignore="HardcodedText" />


                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="@dimen/_15sdp"
                        app:cardElevation="@dimen/_5sdp"
                        app:cardPreventCornerOverlap="true"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="@dimen/_15sdp">


                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/measure_distance"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_alignParentEnd="true"
                                    android:padding="@dimen/_6sdp"
                                    android:text="distance"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_12ssp"
                                    android:textStyle="bold" />

                                <TextView

                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="start"
                                    android:text="Information:"
                                    android:textColor="@color/theme"
                                    android:textSize="@dimen/_16ssp"
                                    android:textStyle="bold" />


                            </RelativeLayout>


                            <TableLayout
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:stretchColumns="1">

                                <TableRow
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="@dimen/_5sdp">

                                    <!-- Column 1 -->
                                    <TextView
                                        android:layout_width="0dip"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:text="Facilities:"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/_12ssp"
                                        android:textStyle="bold" />

                                    <!-- Column 2 -->
                                    <TextView
                                        android:id="@+id/holder7"
                                        android:layout_width="0dip"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:text="facilities"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/_12ssp" />

                                </TableRow>


                                <TableRow
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="@dimen/_5sdp">

                                    <!-- Column 1 -->
                                    <TextView
                                        android:layout_width="0dip"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:text="Timings:"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/_12ssp"
                                        android:textStyle="bold" />

                                    <!-- Column 2 -->
                                    <TextView
                                        android:id="@+id/holder8"
                                        android:layout_width="0dip"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:text="timings"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/_12ssp" />

                                </TableRow>

                                <TableRow
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="@dimen/_5sdp">

                                    <!-- Column 1 -->
                                    <TextView
                                        android:layout_width="0dip"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:text="Address:"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/_12ssp"
                                        android:textStyle="bold" />

                                    <!-- Column 2 -->
                                    <TextView
                                        android:id="@+id/holder9"
                                        android:layout_width="0dip"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:autoLink="map"
                                        android:text="address"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/_12ssp" />

                                </TableRow>


                                <TableRow
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="@dimen/_5sdp">

                                    <!-- Column 1 -->
                                    <TextView
                                        android:layout_width="0dip"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:text="Phone Number:"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/_12ssp"
                                        android:textStyle="bold" />

                                    <!-- Column 2 -->
                                    <TextView
                                        android:id="@+id/holder10"
                                        android:layout_width="0dip"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:autoLink="phone"
                                        android:text="phone number"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/_12ssp" />

                                </TableRow>

                                <TableRow
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <!-- Column 1 -->
                                    <TextView
                                        android:layout_width="0dip"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:text="Website:"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/_12ssp"
                                        android:textStyle="bold" />

                                    <!-- Column 2 -->
                                    <TextView
                                        android:id="@+id/holder11"
                                        android:layout_width="0dip"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:autoLink="web"
                                        android:text="website"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/_12ssp" />

                                </TableRow>


                            </TableLayout>


                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="@dimen/_15sdp"
                        app:cardElevation="@dimen/_5sdp"
                        app:cardPreventCornerOverlap="true"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="@dimen/_15sdp">


                            <TextView

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="start"
                                android:text="Description"
                                android:textColor="@color/theme"
                                android:textSize="@dimen/_16ssp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/holder12"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:gravity="start"
                                android:text=""
                                android:textColor="@color/black"
                                android:textSize="@dimen/_12ssp" />


                        </LinearLayout>


                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="@dimen/_15sdp"
                        app:cardElevation="@dimen/_5sdp"
                        app:cardPreventCornerOverlap="true"
                        app:cardUseCompatPadding="true">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="@dimen/_15sdp">

                            <TextView

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="start"
                                android:text="Map and Navigation"
                                android:textColor="@color/theme"
                                android:textSize="@dimen/_16ssp"
                                android:textStyle="bold" />


                            <androidx.fragment.app.FragmentContainerView
                                android:id="@+id/map12"
                                android:name="com.google.android.gms.maps.SupportMapFragment"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_160sdp"
                                android:layout_marginTop="@dimen/_5sdp">

                            </androidx.fragment.app.FragmentContainerView>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <Button
                                    android:id="@+id/map_view_button"
                                    android:layout_width="@dimen/_110sdp"
                                    android:layout_height="@dimen/_50sdp"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:backgroundTint="@color/toolbar_colour_blue"
                                    android:gravity="center"
                                    android:text="VIEW"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/_12ssp">

                                </Button>

                                <Button
                                    android:id="@+id/map_navigate_button"
                                    android:layout_width="@dimen/_110sdp"
                                    android:layout_height="@dimen/_50sdp"
                                    android:layout_alignParentEnd="true"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:backgroundTint="@color/toolbar_colour_blue"
                                    android:gravity="center"
                                    android:text="NAVIGATE"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/_12ssp">

                                </Button>

                            </RelativeLayout>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>


                </LinearLayout>

            </ScrollView>

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true" />

        </RelativeLayout>
    </LinearLayout>


</LinearLayout>



